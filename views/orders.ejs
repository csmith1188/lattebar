<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/orders.css">
  <title>View Orders</title>
</head>

<body>
  <div id="title">Orders</div>
  <div id="list">
    <% for (var o = 0; o < orders.length;o++){%>
    <div class="order">
    <%   for (order in orders[o]) { %>
      <% if (orders[o][order] == 1) {%>
      <%- order %>
      <% } else { %>
        <%- orders[o][order] %>-<%- order %>
        <% } %>
        ,
        <% } %>
      <div id="room"></div>
      <div id="cost"></div>
      <form action="/orders" method="post">

      <button value="<%- o %>" type="submit" name="delete" class="deletebutton">Delete</button></form>
    </div>
    <% } %>

  </div>
</body>

</html>
